<?xml version="1.0" encoding="UTF-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <target xsi:type="File" 
                name="logfile"
                fileName="${project.basedir}log.txt"/>
        <target xsi:type="Console"
                name="logConsole"
                layout="${message}"/>
    </targets>
    <rules>
        <logger name="*" 
                minlevel="Trace"
                writeTo="logfile"/>
        <logger name="*"
                minlevel="Trace"
                writeTo="logConsole"/>
    </rules>
</nlog>